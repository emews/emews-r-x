#!/bin/bash
set -eu

# ENVIRONMENT
# Just logging environment and tools for debugging/provenance

echo "hostname:" $(hostname)
echo "whoami:  " $(whoami)
echo "date:    " $(date "+%Y-%m-%d %H:%M")
echo "pwd:     " $(pwd -P)
echo -n "git:      "
git log -n 1 --date="format:%Y-%m-%d %H:%m" --format=tformat:"%h %cd %an : %s"
echo

if (( ${#GITHUB_ACTIONS} > 0 ))
then
  C=/Users/runner/miniconda3/etc/profile.d/conda.sh
  echo "sourcing GitHub Actions Miniconda conda.sh:"
  ls $C
  source $C
  echo CONDA_PREFIX=$CONDA_PREFIX
fi

echo "python:  " $(which python)
